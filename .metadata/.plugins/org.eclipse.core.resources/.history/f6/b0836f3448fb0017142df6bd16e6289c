package if文;

public class If_Sentences {

	public static void main(String[] args) {
		// if文の練習
		//変数aが20より小さい場合、Aと表示
int a =10;
if (a < 20){
	System.out.println("A");

	//変数a2が30以下の場合、Bと表示
	int a2=20;
	if (a2 <= 30){
		System.out.println("B");

		//もし、文字列bが山田だった場合、山田さんを表示
	String b="山田";
	if(b.equals("山田")){
		System.out.println(b+"さん");


		//変数a3が10未満かつ、3より大きい→Aと表示
				int a3 =5;
				if (a<10 && 3<a){
					System.out.println("A");

		}
	}

	}
}
	}

}
